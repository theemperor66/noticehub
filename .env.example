# Email settings
EMAIL_SERVER=imap.example.com
EMAIL_PORT=993
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_password
EMAIL_FOLDER=INBOX
EMAIL_CHECK_INTERVAL_SECONDS=60

# Email Filtering (comma-separated, case-insensitive lists)
# Example: EMAIL_SENDER_DOMAIN_WHITELIST=example.com,another.org
EMAIL_SENDER_DOMAIN_WHITELIST=
# Example: EMAIL_SENDER_DOMAIN_BLACKLIST=spam.com,junk.org
EMAIL_SENDER_DOMAIN_BLACKLIST=
# Example: EMAIL_SUBJECT_KEYWORDS_WHITELIST=maintenance,outage,urgent
EMAIL_SUBJECT_KEYWORDS_WHITELIST=
# Example: EMAIL_SUBJECT_KEYWORDS_BLACKLIST=promo,offer,unsubscribe
EMAIL_SUBJECT_KEYWORDS_BLACKLIST=

# LLM settings
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GROQ_API_KEY=your_groq_api_key
LLM_MODEL=gpt-3.5-turbo

# Database Settings
# For SQLite (local file, ensure path is correct if not at root of /app in container)
# DATABASE_URL="sqlite:///noticehub.db"

# For PostgreSQL (used with Docker Compose)
DATABASE_URL="postgresql+psycopg2://noticehub_user:noticehub_password@db:5432/noticehub_db"
POSTGRES_USER="noticehub_user"
POSTGRES_PASSWORD="noticehub_password"
POSTGRES_DB="noticehub_db"

